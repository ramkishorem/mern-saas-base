    "express-async-errors": "^3.1.1",
    "express-joi-validation": "^4.0.3",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.3.2",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
